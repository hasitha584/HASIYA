<script>
    // Real-time Clock
    setInterval(() => {
        const d = new Date();
        document.getElementById('live-time').innerText = d.getHours().toString().padStart(2,'0') + ":" + d.getMinutes().toString().padStart(2,'0') + ":" + d.getSeconds().toString().padStart(2,'0');
    }, 1000);

    function validate() {
        if(document.getElementById('access-key').value === "0901") {
            document.getElementById('auth-gate').style.display = 'none';
            document.getElementById('main-interface').style.display = 'block';
        } else { alert("ACCESS DENIED!"); }
    }

    function executeScan() {
        const btn = document.getElementById('run-btn');
        const monitor = document.getElementById('algo-monitor');
        const grid = document.getElementById('signal-grid');
        const logs = document.getElementById('logs');

        btn.style.display = 'none';
        grid.style.display = 'none';
        monitor.style.display = 'block';
        logs.innerHTML = "";

        const logSequence = [
            "> BRUTEFORCING RTP SEEDS...",
            "> CAPTURING SERVER PACKETS...",
            "> CALCULATING MULTIPLIER FREQUENCY...",
            "> 7.00X-10.00X WINDOWS IDENTIFIED.",
            "> SCAN SUCCESSFUL."
        ];

        let i = 0;
        const interval = setInterval(() => {
            if(i < logSequence.length) {
                logs.innerHTML += logSequence[i] + "<br>";
                i++;
            } else {
                clearInterval(interval);
                setTimeout(renderResults, 1000);
            }
        }, 800);
    }

    function renderResults() {
        document.getElementById('algo-monitor').style.display = 'none';
        const grid = document.getElementById('signal-grid');
        grid.style.display = 'flex';
        grid.innerHTML = "";
        
        document.getElementById('run-btn').style.display = 'block';
        document.getElementById('run-btn').innerText = "REFRESH STEALTH SCAN";

        for(let x=1; x<=2; x++) {
            const odd = (Math.random() * 3 + 7).toFixed(2);
            const now = new Date();
            const startM = now.getMinutes() + (x * 15);
            const hitM = startM + Math.floor(Math.random() * 5);
            const endM = startM + 12;

            const format = (m) => {
                const d = new Date();
                d.setMinutes(m);
                return d.getHours().toString().padStart(2, '0') + ":" + d.getMinutes().toString().padStart(2, '0');
            };

            grid.innerHTML += `
                <div class="signal-box">
                    <div>
                        <div class="badge">TARGET MULTIPLIER</div>
                        <div class="odd-display">${odd}x</div>
                    </div>
                    <div class="time-info">
                        <div style="font-size:9px; color:#666;">WINDOW: ${format(startM)}-${format(endM)}</div>
                        <div class="badge" style="background:var(--primary)">BEST ENTRY</div>
                        <div class="hit-time">${format(hitM)}</div>
                    </div>
                </div>
            `;
        }
    }
</script>

